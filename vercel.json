{
  "version": 2,
  "builds": [
    {
      "src": "tsc && vite build",
      "use": "@vercel/static-build"
    }
  ],
  "routes": [
    {
      "src": "/(.*\\.(json|ico|js|css|png|jpe?g|gif|svg|woff2?|ttf|eot))$",
      "dest": "/$1",
      "headers": {
        "cache-control": "public, max-age=31536000, immutable"
      }
    },
    {
      "src": "/(.*)(\\/|\\.html)?$",
      "dest": "/index.html"
    }
  ],
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/"
    }
  ]
}
